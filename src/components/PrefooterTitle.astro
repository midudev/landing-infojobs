---
interface Props {
    title: string;
    subtitle: string;
    colorTitle: string;
    colorSubtitle: string;
}

const {title, subtitle, colorTitle, colorSubtitle} = Astro.props;
---
<div class="w-full h-full p-6 sm:p-5 lg:p-8">
    <h5 class={`text-2xl font-semibold md:text-xl lg:text-2xl ${colorSubtitle}`}>
        {subtitle}
    </h5>
    <h4 class={`text-4xl font-semibold md:text-5xl xl:text-6xl ${colorTitle} leading-[52px]`}>
        {title}
    </h4>
</div>
