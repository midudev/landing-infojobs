---
interface Props {
    title: string;
    subtitle: string;
    colorTitle: string;
    colorSubtitle: string;
}

const {title, subtitle, colorTitle, colorSubtitle} = Astro.props
---

<div class="pt-4 px-4 sm:px-5 md:px-12 lg:px-[60px] sm:pt-0 md:pt-5 lg:pt-10">
    <h5 class=`mt-4 text-2xl leading-7 font-semibold  sm:text-xl lg:text-2xl text-${colorSubtitle}`>{subtitle}</h5>
    <h4 class=`mt-2 text-5xl font-semibold text-${colorTitle} leading-[52px] sm:text-4xl lg:text-5xl`>
    {title}
    </h4>
</div>

