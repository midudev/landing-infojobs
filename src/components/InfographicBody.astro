---
type Props = {
  bentoInfoModalCards?: readonly BentoInfoModalCard[]; // Ahora es opcional
  bentoInfoModalCardsBig?: BentoInfoModalCardBig[];
};

type BentoInfoModalCard = {
  image: string;
  title: string;
  description: string;
  firstBgColor: string;
  secondBgColor: string;
  textColor: string;
};

type BentoInfoModalCardBig = {
  title: string;
  description: string;
  requirements: { label: string; tag: string[] }[];
  location: { label: string; tag1: string; tag2: string }[];
  image1: string;
  image2: string;
  backgroundColor: string;
  backgroundColor2: string;
  backgroundColor3: string;
};

const { bentoInfoModalCards = [], bentoInfoModalCardsBig = [] } =
  Astro.props as Props;
---

<section
  class="grid gap-[48px] md:justify-between grid-cols-1 lg:grid-cols-2 overflow-hidden"
>
  {
    bentoInfoModalCards.map(
      ({
        image,
        title,
        description,
        firstBgColor,
        secondBgColor,
        textColor,
      }) => (
        <article
          class="file-card w-auto h-full mx-auto max-h-[456px] max-w-[330px] md:max-w-[600px] md:max-h-[630px] lg:min-h-[700px]"
          style={{
            background: `linear-gradient(to bottom right, ${firstBgColor}, ${secondBgColor})`,
          }}
        >
          <div class="w-full h-full p-2 my-7">
            <img
              src={image}
              alt={`${title} Card`}
              class="min-h-[115px] max-h-[115px] lg:min-h-[210px] lg:max-h-[210px] w-auto mx-auto my-7"
            />

            <div class="py-10 px-15 flex flex-col gap-6 items-center">
              <h4
                class="text-[26px] leading-[26px] md:text-5xl md:leading-[48x] text-center"
                style={{ color: textColor }}
              >
                {title}
              </h4>

              <p
                class="text-[15px] leading-[15px] md:text-[28px] md:leading-7 text-center"
                style={{ color: textColor }}
              >
                {description}
              </p>
            </div>
          </div>
        </article>
      )
    )
  }
</section>

<section class="gap-[48px] w-auto h-auto">
  {
    bentoInfoModalCardsBig.map((card) => (
      <article class={`${card.backgroundColor} p-5 mb-20 rounded-b-3xl`}>
        <h5
          class={` ${card.backgroundColor3} uppercase py-2 px-4 w-full md:w-fit rounded-lg text-white text-xl leading-5 text-center tracking-[2%] `}
        >
          {card.title}
        </h5>
        <p class="lg:text-[3.5rem] lg:my-9">{card.description}</p>

        <div class="grid grid-cols-2 gap-6 mb-6">
          {card.requirements.map((requirement) => (
            <div
              class={`flex flex-col gap-2 ${card.backgroundColor2} rounded-[20px] px-5 py-6 `}
            >
              <h6 class="rounded-md text-[24px] bg-white text-black w-fit px-1">
                {requirement.label}
              </h6>
              <div class=" flex flex-wrap gap-5">
                {requirement.tag.map((tag) => (
                  <span class="text-black text-3xl px-2 py-1 rounded-[32px] border-[1px] border-black w-fit">
                    {tag}
                  </span>
                ))}
              </div>
            </div>
          ))}
        </div>

        <div>
          {card.location.map((location) => (
            <div class={`flex flex-row gap-2 justify-between ${card.backgroundColor2} rounded-[20px] px-5 py-6 `}>
              <h6 class="rounded-md text-[24px] bg-white text-black w-fit h-fit px-1">
                {location.label}
              </h6>
              <div class={`rounded-md ${card.image1} `}>
                <span class="text-black text-3xl  w-full">
                  {location.tag1}
                </span>
              </div>
              <div class={`rounded-md ${card.image2} `}>
                <span class="text-black text-3xl w-full">
                  {location.tag2}
                </span>
              </div>
            </div>
          ))}
        </div>
      </article>
    ))
  }
</section>

